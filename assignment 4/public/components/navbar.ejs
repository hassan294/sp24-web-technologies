<style>
  .success-banner {
    position: absolute;
    top: 50px;
    right: 0px;
    width: 200px;
    transform: translateX(10px);
    background-color: red;
    color: #fff;
    padding: 10px;
    border-radius: 5px;
    font-size: 14px;
    transition: transform 0.3s ease-out, opacity 0.3s ease-out;
  }

  .hidden {
    opacity: 0;
    pointer-events: none;
  }

  .visible {
    opacity: 1;
    pointer-events: auto;
  }
</style>

