        $(".success-banner").removeClass("hidden").addClass("visible");
        console.log("no user id");
        setTimeout(function () {
          $(".success-banner").removeClass("visible").addClass("hidden");
        }, 3000);
      });
    }

    // console.log("document ready");

    console.log("user id ", userid);
  });
</script>
