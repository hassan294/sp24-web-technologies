<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Clothing Store</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css"
    />
    <style>
      /* Custom CSS for product cards */
      .card {
        margin-bottom: 20px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
      }

      .card img {
        width: 100%;
        height: auto;
      }

      .card-title {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 10px;
      }

      .card-body {
        padding: 15px;
      }

      .card-footer {
        padding: 15px;
        background-color: #f8f9fa;
      }

      .price {
        font-size: 16px;
        font-weight: bold;
      }

      .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
      }

      .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
      }

      .topcorrection {
        padding-top: 75px;
      }

      /* Flexbox for cards */
      .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center; /* Center the cards */
      }

      .card-container .card {
        flex: 1 1 calc(25% - 20px); /* Adjust for 4 cards per row */
        box-sizing: border-box;
      }

      @media (max-width: 1200px) {
        .card-container .card {
          flex: 1 1 calc(33.333% - 20px); /* Adjust for 3 cards per row */
        }
      }

      @media (max-width: 992px) {
        .card-container .card {
          flex: 1 1 calc(50% - 20px); /* Adjust for 2 cards per row */
        }
      }

      @media (max-width: 768px) {
        .card-container .card {
          flex: 1 1 100%; /* Adjust for 1 card per row */
        }
      }
    </style>
  </head>
  <body>
    <%- include('../public/components/navbar') %>
    <section>
      <div class="container-fluid topcorrection">
        <div class="container card-container">
          <% data.forEach(product => { %>
          <div class="card">
            <img
              src="<%= product.imageUrl %>"
              class="card-img-top"
              alt="<%= product.title %>"
            />
            <div class="card-body">
              <h5 class="card-title"><%= product.title %></h5>
            </div>
            <div class="card-footer">
              <div class="d-flex justify-content-between align-items-center">
                <div class="price"><%= product.comparePrice %></div>
                <a href="/data/<%= product._id %>" class="btn btn-primary"
                  >View Details</a
                >
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <% if (currentPage > 1) { %>
        <li class="page-item">
          <a
            class="page-link"
            href="<%=baseUrl%>?page=<%= currentPage - 1 %>&limit=<%= limit %>"
            >Previous</a
          >
        </li>
        <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
          <a
            class="page-link"
            href="<%=baseUrl%>?page=<%= i %>&limit=<%= limit %>"
            ><%= i %></a
          >
        </li>
        <% } %> <% if (currentPage < totalPages) { %>
        <li class="page-item">
          <a
            class="page-link"
            href="<%=baseUrl%>?page=<%= currentPage + 1 %>&limit=<%= limit %>"
            >Next</a
          >
        </li>
        <% } %>
      </ul>
    </nav>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </body>
</html>
